{
  "name": "notion-docusaurus-sync",
  "version": "0.1.0",
  "description": "Bidirectional sync between Notion databases and Docusaurus markdown files",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "notion-docusaurus-sync": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "sync": "node dist/cli.js sync",
    "site:dev": "cd test-site && npm run start",
    "site:build": "cd test-site && npm run build",
    "prepare": "npm run build"
  },
  "keywords": [
    "notion",
    "docusaurus",
    "sync",
    "markdown",
    "cms"
  ],
  "author": "AaronKokal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AaronKokal/notion-docusaurus-sync"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "eslint": "^9.39.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@notionhq/client": "^5.9.0",
    "@types/mdast": "^4.0.4",
    "remark-directive": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.1.0",
    "yaml": "^2.8.2"
  }
}
